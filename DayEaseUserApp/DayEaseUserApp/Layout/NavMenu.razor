@code {
    private bool collapseNavMenu = false;
    private bool showLogoutPopup = false;

    [Inject] NavigationManager Nav { get; set; }
    [Inject] CartService Cart { get; set; }

    protected override async Task OnInitializedAsync()
    {
        await locationManager.InitializeAsync();

        CartService.OnCartChanged += RefreshBadge;

        await CartService.RestoreAsync();

        Nav.LocationChanged += Nav_LocationChanged;
    }

    private async void Nav_LocationChanged(object? sender, LocationChangedEventArgs e)
    {
        await Cart.SyncCartToBackendAsync();
    }

    public void Dispose()
    {
        Nav.LocationChanged -= Nav_LocationChanged;
        CartService.OnCartChanged -= RefreshBadge;
    }

    private void RefreshBadge()
    {
        InvokeAsync(StateHasChanged);
    }

    private void ToggleNavMenu() => collapseNavMenu = !collapseNavMenu;

    private void OpenCart() => NavigationManager.NavigateTo("/cart");

    private void OpenProfile() => NavigationManager.NavigateTo("/user-profile");

    private void ShowLogoutPopup() => showLogoutPopup = true;

    private void CancelLogout() => showLogoutPopup = false;

    private void ConfirmLogout()
    {
        showLogoutPopup = false;
        NavigationManager.NavigateTo("/logout");
    }
}

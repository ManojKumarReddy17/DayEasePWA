        .see-more-wrapper

    {
        justify-content: flex-end;
    }

    }
</style>
  
@if (isPageLoading)
{
    <div class="loading-wrapper">
        <div class="loading-spinner">
            <div class="spinner-border"></div>
            <img src="images/login-logo_v01.png" alt="Loading" class="spinner-image" />
        </div>
    </div>
}
else if (!string.IsNullOrEmpty(ErrorMessage))
{
    <div class="alert alert-warning text-center mt-3" role="alert">
        @ErrorMessage
    </div>
}
else
{
    @if (!IsGuestUser && RecentOrderStores?.Count > 0)
    {
        <div class="container mt-3">
            <h2 class="store-offers-heading">
                <i class="bi bi-clock-history me-2"></i>Recent Orders
            </h2>

            <div class="store-grid">
                @foreach (var store in RecentOrderStores)
                {
                    @StoreCard(store)
                }
            </div>
        </div>
    }


    @if (NearbyStores.Any())
    {
        <div class="container mt-4">

            <!-- Header row -->
            <div class="stores-header">
                <h2 class="store-offers-heading mb-0">
                    <i class="bi bi-shop me-2"></i>Nearby Stores
                </h2>
            </div>
            <!-- Store grid -->
            <div class="store-grid">
                @foreach (var store in NearbyStores)
                {
                    @StoreCard(store)
                }
            </div>
            <div class="see-more-wrapper">
                <button class="btn btn-link see-more-btn"
                        @onclick="NavigateToStores">
                     More Stores
                </button>
            </div>
        </div>
    }
}

@code {

    /* ================== STATE ================== */

    private List<HighLightModel> RecentOrderStores = new();
    private List<HighLightModel> NearbyStores = new();

    private bool IsGuestUser;
    private string ErrorMessage = string.Empty;

    private bool isPageLoading = true;

    // Nearby pagination
    private int CurrentPage = 1;
    private const int PageSize = 10;
    private bool HasMoreData = true;
    private bool isNearbyLoading = false;

    /* ================== LIFECYCLE ================== */

    protected override async Task OnInitializedAsync()
    {
        isPageLoading = true;

        IsGuestUser = await LocalStorage.GetItemAsync<bool>("IsGuestUser");

        await locService.EnsureLocationAsync(UserLocation);

        if (string.IsNullOrEmpty(locService.Latitude) ||
            string.IsNullOrEmpty(locService.Longitude))
        {
            ErrorMessage = "Unable to detect location";
            isPageLoading = false;
            return;
        }

        var tasks = new List<Task>
    {
        FetchNearbyStoresAsync()
    };

        if (!IsGuestUser)
            tasks.Add(FetchRecentOrderStoresAsync());

        await Task.WhenAll(tasks);

        isPageLoading = false;
    }


    /* ================== API ================== */
    private async Task FetchRecentOrderStoresAsync()
    {
        try
        {
            var request = new UserRecentOrderRequest
            {
                userId = UserLocation.UserId,
                userLatitude = locService.Latitude,
                userLongitude = locService.Longitude
            };

            var orders = await StoreService.GetRecentOrdersForUserId(request);

            if (orders == null || orders.Count == 0)
            {
                RecentOrderStores.Clear();
                return;
            }

            RecentOrderStores = orders
                .Where(o => !string.IsNullOrEmpty(o.storeId))
                .GroupBy(o => o.storeId)
                .Select(g => new HighLightModel
                {
                    StoreId = g.Key,
                    StoreName = g.First().storeName ?? "Unknown Store",
                    DistanceInKm = g.First().distance > 0
                        ? Math.Round(g.First().distance, 2)
                        : 0,

                    // 🔹 Recent orders don’t have images → default
                    StoreImage = "images/default-image.jpeg"
                })
                .ToList();
        }
        catch (Exception ex)
        {
            ErrorMessage = $"Recent orders error: {ex.Message}";
        }
    }


    private async Task FetchNearbyStoresAsync()
    {
        try
        {
            isNearbyLoading = true;

            var request = new NearbyStoresRequest
            {
                Latitude = locService.Latitude,
                Longitude = locService.Longitude,
                pageNumber = CurrentPage,
                pageSize = PageSize
            };

            var apiResponse = await StoreService.GetNearbyStoresAsync(request);

            if (apiResponse?.Success == true && apiResponse.Stores?.Any() == true)
            {
                var newStores = apiResponse.Stores.Select(s => new HighLightModel
                {
                    StoreId = s.storeId,
                    StoreName = s.storeName ?? "Unknown Store",
                    DistanceInKm = Math.Round(s.distance, 2),
                    StoreImage = s.storeImage
                }).ToList();

                NearbyStores.AddRange(newStores);

                HasMoreData = apiResponse.HasNextPage;
            }
            else
            {
                HasMoreData = false;
            }
        }
        catch (Exception ex)
        {
            ErrorMessage = $"Error fetching stores: {ex.Message}";
        }
        finally
        {
            isNearbyLoading = false;
        }
    }

    private void NavigateToStores()
    {
        Navigation.NavigateTo("/stores");

    }

    /* ================== HELPERS ================== */


    // private string SafeEscape(string? value)
    //     => Uri.EscapeDataString(value ?? string.Empty);

    private string GetStoreImage(HighLightModel store)
        => string.IsNullOrWhiteSpace(store.StoreImage)
            ? "images/default-image.jpeg"
            : store.StoreImage;

    /* ================== UI COMPONENT ================== */

    RenderFragment StoreCard(HighLightModel store) => @<div class="store-card-wrapper">
        <a href="/productcategory?storeId=@store.StoreId
                    &storeName=@store.StoreName
                    &DistanceInKm=@store.DistanceInKm"
           class="store-link">

            <div class="custom-card">
                <div class="position-relative">
                    <img src="@GetStoreImage(store)"
                         class="card-img-customs"
                         alt="@store.StoreName"
                         onerror="this.onerror=null;this.src='/images/default-image.jpeg';" />
                </div>

                <div class="store-info">
                    <div class="store-name">@store.StoreName</div>
                    <div class="location">📍 @store.DistanceInKm km</div>
                </div>
            </div>
        </a>
    </div>;
}

<style>
    body {
        background-color: ghostwhite;
    }

    .loading-wrapper {
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 300px;
    }

    .loading-spinner {
        position: relative;
        width: 80px;
        height: 80px;
    }

    .spinner-border {
        position: absolute;
        width: 80px;
        height: 80px;
        border: 6px solid #f3f3f3;
        border-top: 6px solid #007bff;
        border-radius: 50%;
        animation: spin 1s linear infinite;
    }

    @@keyframes spin {
        0% {
            transform: rotate(0deg);
        }

        100% {
            transform: rotate(360deg);
        }
    }

    .spinner-image {
        position: absolute;
        top: 50%;
        left: 50%;
        width: 40px;
        height: 40px;
        transform: translate(-50%, -50%);
        z-index: 1;
    }




    .store-offers-heading {
        font-weight: 600;
        background-color: #fff0f0;
        color: dodgerblue;
        text-align: center;
        padding: 1rem;
        border-radius: 8px;
        display: flex;
        align-items: center;
        justify-content: flex-start;
        gap: 0.75rem;
        font-size: 1.3rem;
        flex-wrap: wrap;
    }

    @@media (max-width: 500px) {
        .store-offers-heading {
            font-size: 1rem;
            padding: 0.75rem;
            justify-content: center; /* center align on small screens */
        }
    }


    .store-offers-heading img {
        width: 60px;
        height: auto;
    }

    .store-grid {
        display: flex;
        flex-wrap: wrap;
        padding: 10px;
        gap: 0.8rem;
        justify-content: center;
    }

    .store-card-wrapper {
        padding: -0.8rem;
        box-sizing: border-box;
        font-size: 0.72rem;
        flex: 1 1 15%;
        max-width: calc(20% - 10px);
    }

    .card-img-customs {
        width: 100%;
        height: 180px;
        object-fit: cover; /* ensures the image fills the box without distortion */
        border-bottom: 1px solid #eee;
        transition: transform 0.3s ease;
        display: block;
        background-color: #f4f4f4; /* helpful during image loading */
    }

    /* On hover, slightly zoom the image for effect */
    .custom-card:hover .card-img-customs {
        transform: scale(1.03);
    }

    @@media (max-width: 992px) {
        .store-card-wrapper {
            flex: 1 1 calc(33.33% - 10px);
            max-width: calc(33.33% - 0.8rem);
        }

        .card-img-customs {
            height: 140px;
        }
    }

    @@media (max-width: 768px) {
        .store-card-wrapper {
            flex: 1 1 calc(33.33% - 10px);
            max-width: calc(33.33% - 0.8rem);
        }

        .card-img-customs {
            height: 120px;
        }
    }

    @@media (max-width: 500px) {
        .store-card-wrapper {
            flex: 1 1 calc(33.33% - 10px);
            max-width: calc(33.33% - 10px);
        }

        .card-img-customs {
            height: 100px;
        }
    }

    .custom-card {
        border: 1px solid #ddd;
        border-radius: 16px;
        overflow: hidden;
        background: white;
        box-shadow: 0 2px 8px rgba(0,0,0,0.05);
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        height: 100%;
    }

    .card-img-custom {
        width: 100%;
        object-fit: cover;
        border-bottom: 1px solid #eee;
    }



    .offer-badge {
        position: absolute;
        top: 5px;
        right: 0.5px;
        background-color: #5a4fff;
        color: white;
        font-size: 0.75rem;
        padding: 2px 1px;
        border-radius: 10px;
        font-weight: 600;
    }

    .store-info {
        padding: 10px;
    }

    .store-name {
        font-weight: 500;
        margin-bottom: 5px;
    }

    .rating-stars {
        font-size: 0.85rem;
        color: #ffaa00;
        margin-bottom: 5px;
    }

    .location {
        font-size: 0.8rem;
        color: #555;
    }

    .btn-shop {
        margin: 10px;
        background-color: #006aff;
        color: white;
        padding: 6px 12px;
        border: none;
        border-radius: 8px;
        text-align: center;
        text-decoration: none;

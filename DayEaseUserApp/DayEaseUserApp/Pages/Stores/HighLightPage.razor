    }

    .special-offer {
        color: dodgerblue;
        background-color: #ffe6e9;
        padding: 0.2rem 0.4rem;
        font-size: 0.7rem;
        border-radius: 4px;
        margin: 0.3rem 0;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
    }

    .text-muted {
        font-size: 0.68rem;
        display: flex;
        align-items: center;
        gap: 0.2rem;
        margin-bottom: 0.3rem;

<div class="main-container">
    <img src="images/login-logo_v01.png" alt="Day Ease Logo" class="logo" />
    <h3>Enter Details</h3>

    <EditForm EditContext="@editContext" OnValidSubmit="HandleSubmit">
        <DataAnnotationsValidator />

        <!-- First Name -->
        <div class="mb-3">
            <label class="form-label">First Name</label>
            <InputText @bind-Value="user.FName" class="form-control" maxlength="25" oninput="this.value=this.value.replace(/[^A-Za-z\s]/g,'')" />
            <ValidationMessage For="@(() => user.FName)" class="validation-message" />
        </div>

        <!-- Last Name -->
        <div class="mb-3">
            <label class="form-label">Last Name</label>
            <InputText @bind-Value="user.LName" class="form-control" maxlength="25" oninput="this.value=this.value.replace(/[^A-Za-z\s]/g,'')" />
            <ValidationMessage For="@(() => user.LName)" class="validation-message" />
        </div>

        <!-- Password -->
        <div class="mb-3">
            <label class="form-label">Password</label>
            <div class="password-wrapper">
                <InputText @bind-Value="user.Password" type="@PasswordInputType" class="form-control password-input" maxlength="15"
                           @oninput="OnPasswordInput" @onfocus="() => ShowPasswordRules = true" @onblur="ValidatePassword" />
                <span class="password-toggle @(ShowPassword ? "show" : "hide")" @onclick="TogglePasswordVisibility">
                    <i class="@((ShowPassword ? "fas fa-eye-slash" : "fas fa-eye"))"></i>
                </span>
            </div>
            <ValidationMessage For="@(() => user.Password)" class="validation-message" />
            @if (!string.IsNullOrEmpty(PasswordErrorMessage))
            {
                <div class="validation-message">@PasswordErrorMessage</div>
            }
            @if (ShowPasswordRules && !IsPasswordValid)
            {
                <div class="password-rules mt-2">
                    <ul style="color: white; padding: 10px; border-radius: 8px;">
                        <li>Password must be 8–15 characters</li>
                        <li>Contain at least one lowercase letter</li>
                        <li>Contain at least one uppercase letter</li>
                        <li>Contain at least one number</li>
                        <li>Contain at least one special symbol</li>
                    </ul>
                </div>
            }
        </div>

        <!-- Country -->
        <div class="mb-3">
            <label class="form-label">Country</label>
            <InputText @bind-Value="user.Country" class="form-control" readonly />
            <ValidationMessage For="@(() => user.Country)" class="validation-message" />
        </div>

        <!-- State -->
        <div class="mb-3">
            <label class="form-label">State</label>
            <select class="form-control" @bind="SelectedStateId">
                <option value="">-- Select State --</option>
                @foreach (var state in stateList)
                {
                    <option value="@state.StateId">@state.StateName</option>
                }
            </select>
            <ValidationMessage For="@(() => user.State)" class="validation-message" />
        </div>

        <!-- City -->
        <div class="mb-3">
            <label class="form-label">City</label>
            <select class="form-control" @bind="SelectedCityId">
                <option value="">-- Select City --</option>
                @foreach (var city in cityList)
                {
                    <option value="@city.CityId">@city.CityName</option>
                }
            </select>
            <ValidationMessage For="@(() => user.City)" class="validation-message" />
        </div>

        <!-- Area -->
        <div class="mb-3">
            <label class="form-label">Area</label>
            <select class="form-control" @bind="SelectedAreaId">
                <option value="">-- Select Area --</option>
                @foreach (var area in areaList)
                {
                    <option value="@area.AreaId">@area.AreaName</option>
                }
            </select>
            <ValidationMessage For="@(() => user.Location)" class="validation-message" />
        </div>

        <!-- SubArea -->
        <div class="mb-3">
            <label class="form-label">SubArea</label>
            <select class="form-control" @bind="user.Sublocation">
                <option value="">-- Select SubArea --</option>
                @foreach (var sub in subareaList)
                {
                    <option value="@sub.SubAreaId">@sub.SubAreaName</option>
                }
            </select>
            <ValidationMessage For="@(() => user.Sublocation)" class="validation-message" />
        </div>

        <!-- Gender -->
        <div class="mb-3">
            <label class="form-label">Gender</label>
            <InputSelect @bind-Value="user.Gender" class="form-control">
                <option value="">-- Select Gender --</option>
                <option>Male</option>
                <option>Female</option>
                <option>Other</option>
            </InputSelect>
            <ValidationMessage For="@(() => user.Gender)" class="validation-message" />
        </div>

        <!-- Address -->
        <div class="mb-3">
            <label class="form-label">Address</label>
            <InputTextArea @bind-Value="user.Address" class="form-control" rows="2" maxlength="200" />
            <ValidationMessage For="@(() => user.Address)" class="validation-message" />
        </div>

        <!-- Location Buttons -->
        <div class="mb-3">
            <label class="form-label">Choose Location</label>
            <button type="button" class="btn btn-info text-dark ms-2" @onclick="UseCurrentLocation">
                Use Current Location
            </button>
            <button type="button" class="btn btn-info text-dark ms-2" @onclick="OpenChooseLocationPopup">
                Choose on Map
            </button>
        </div>

        <!-- Latitude/Longitude -->
        <div class="mb-3">
            <label class="form-label">Latitude</label>
            <InputText @bind-Value="user.Latitude" class="form-control" readonly />
        </div>
        <div class="mb-3">
            <label class="form-label">Longitude</label>
            <InputText @bind-Value="user.Longitude" class="form-control" readonly />
        </div>

        <!-- Terms Checkbox -->
        <div class="form-check mb-3">
            <InputCheckbox @bind-Value="AcceptedTerms" class="form-check-input" />
            <label class="form-check-label">I accept the terms and conditions</label>
        </div>

        <button type="submit" class="btn btn-primary" disabled="@(!AcceptedTerms)">Register</button>
    </EditForm>
</div>

<!-- Map Modal -->
@if (ShowMapPopup)
{
    <div class="modal-backdrop">
        <div class="modal-map-box">
            <h4>Select Location</h4>
            <div id="popupMap" style="width:100%; height:350px; border:1px solid #ccc;"></div>
            <div class="mt-3 text-center">
                <button type="button" class="btn btn-success" @onclick="ConfirmSelectedLocation">Confirm</button>
                <button type="button" class="btn btn-secondary" @onclick="CloseMapPopup">Cancel</button>
            </div>
        </div>
    </div>
}

<!-- Success Modal -->
@if (ShowUserExistsModal)
{
    <div class="modal-backdrop">
        <div class="modal-box">
            <p>Successfully registered. Please log in to continue.</p>
            <button class="btn-primary-modal" @onclick="NavigateToLogin">Login</button>
            <button class="btn-secondary-modal" @onclick="CloseModal">Cancel</button>
        </div>
    </div>
}

@code {
    private EditContext editContext;
    private ValidationMessageStore messageStore;
    private UserModel user = new();
    private List<StateModel> stateList = new();
    private List<CityModel> cityList = new();
    private List<AreaModel> areaList = new();
    private List<SubAreaModel> subareaList = new();
    private bool AcceptedTerms = false;
    private bool Submitted = false;
    private bool ShowUserExistsModal = false;
    private bool ShowPasswordRules = false;
    private bool IsPasswordValid = false;
    private string PasswordErrorMessage = string.Empty;
    private bool ShowPassword = false;
    private string PasswordInputType => ShowPassword ? "text" : "password";
    private bool ShowMapPopup = false;
    private bool IsUsingCurrentLocation = false;
    private double tempLat;
    private double tempLng;

    private string SelectedStateId
    {
        get => user.State;
        set
        {
            if (user.State != value)
            {
                user.State = value;
                user.City = null;
                user.Location = null;
                user.Sublocation = null;
                _ = LoadCitiesAsync();
            }
        }
    }

    private string SelectedCityId
    {
        get => user.City;
        set
        {
            if (user.City != value)
            {
                user.City = value;
                user.Location = null;
                user.Sublocation = null;
                _ = LoadAreasAsync();
            }
        }
    }

    private string SelectedAreaId
    {
        get => user.Location;
        set
        {
            if (user.Location != value)
            {
                user.Location = value;
                user.Sublocation = null;
                _ = LoadSubAreasAsync();
            }
        }
    }

    protected override async Task OnInitializedAsync()
    {
        user = new UserModel();
        editContext = new EditContext(user);
        messageStore = new ValidationMessageStore(editContext);

        editContext.OnFieldChanged += (sender, args) =>
        {
            messageStore.Clear(args.FieldIdentifier);
            var value = args.FieldIdentifier.Model
                .GetType()
                .GetProperty(args.FieldIdentifier.FieldName)?
                .GetValue(args.FieldIdentifier.Model);

            var results = new List<ValidationResult>();
            Validator.TryValidateProperty(value, new ValidationContext(args.FieldIdentifier.Model)
            {
                MemberName = args.FieldIdentifier.FieldName
            }, results);

            foreach (var result in results)
            {
                messageStore.Add(args.FieldIdentifier, result.ErrorMessage);
            }

            editContext.NotifyValidationStateChanged();
        };

        stateList = await RegistrationService.GetStatesAsync();
        user.Country = "India";
        var phoneFromLocalStorage = await LocalStorage.GetItemAsync<string>("PhoneNumber");
        if (!string.IsNullOrEmpty(phoneFromLocalStorage))
            user.PhoneNumber = phoneFromLocalStorage;
    }

    private void TogglePasswordVisibility() => ShowPassword = !ShowPassword;

    private void ValidatePassword(FocusEventArgs e)
    {
        PasswordErrorMessage = "";
        if (!IsValidPassword(user.Password))
            PasswordErrorMessage = "Enter a valid password";
    }

    private void OnPasswordInput(ChangeEventArgs e)
    {
        user.Password = e.Value?.ToString() ?? "";
        PasswordErrorMessage = "";
        editContext.NotifyFieldChanged(editContext.Field("Password"));
        editContext.Validate();
    }

    private bool IsValidPassword(string password)
        => !string.IsNullOrWhiteSpace(password) &&
           password.Length >= 8 && password.Length <= 15 &&
           password.Any(char.IsLower) &&
           password.Any(char.IsUpper) &&
           password.Any(char.IsDigit) &&
           password.Any(ch => "!@#$%^&*()_+-=[]{}|;:,.<>?".Contains(ch));

    private async Task LoadCitiesAsync()
    {
        if (!string.IsNullOrWhiteSpace(user.State))
            cityList = await RegistrationService.GetCityAsync(new CityModel { StateId = user.State });
        else
            cityList.Clear();
        areaList.Clear();
        subareaList.Clear();
        await InvokeAsync(StateHasChanged);
    }

    private async Task LoadAreasAsync()
    {
        if (!string.IsNullOrWhiteSpace(user.City))
            areaList = await RegistrationService.GetAreaByCityId(new AreaModel { CityId = user.City });
        else
            areaList.Clear();
        subareaList.Clear();
        await InvokeAsync(StateHasChanged);
    }

    private async Task LoadSubAreasAsync()
    {
        if (!string.IsNullOrWhiteSpace(user.Location))
            subareaList = await RegistrationService.GetSubAreaByAreaId(new SubAreaModel { AreaId = user.Location });
        else
            subareaList.Clear();
        await InvokeAsync(StateHasChanged);
    }

    private async Task UseCurrentLocation()
    {
        try
        {
            var gps = await JS.InvokeAsync<CurrentLocation>("mapInterop.getCurrentLocation");
            user.Latitude = gps.Lat.ToString();
            user.Longitude = gps.Lng.ToString();
            await InvokeAsync(StateHasChanged);
        }
        catch (Exception ex)
        {
            Console.WriteLine("Error getting location: " + ex.Message);
        }
    }

    private async Task OpenChooseLocationPopup()
    {
        IsUsingCurrentLocation = false;
        ShowMapPopup = true;
        await InvokeAsync(StateHasChanged);
        await Task.Delay(200);
        var gps = await JS.InvokeAsync<CurrentLocation>("mapInterop.getCurrentLocation");
        double lat = gps.Lat;
        double lng = gps.Lng;
        await JS.InvokeVoidAsync("mapInterop.openMapPopupChoose", lat, lng, DotNetObjectReference.Create(this));
    }

    [JSInvokable]
    public Task SetTempLocation(double lat, double lng)
    {
        tempLat = lat;
        tempLng = lng;
        return Task.CompletedTask;
    }

    private void ConfirmSelectedLocation()
    {
        user.Latitude = tempLat.ToString();
        user.Longitude = tempLng.ToString();
        ShowMapPopup = false;
    }

    private void CloseMapPopup() => ShowMapPopup = false;

    private async Task HandleSubmit(EditContext editContext)
    {
        if (!editContext.Validate())
            return;

        var response = await RegistrationService.RegisterUserAsync(user); // Make sure this returns a typed object

        if (response != null)
        {
            Submitted = true;
            await LocalStorage.RemoveItemAsync("PhoneNumber");
            user = new UserModel();
            AcceptedTerms = false;
            stateList = await RegistrationService.GetStatesAsync();
            cityList.Clear();
            areaList.Clear();
            subareaList.Clear();
            ShowUserExistsModal = true;
            await InvokeAsync(StateHasChanged);
        }
        else
        {
            Submitted = false;
        }
    }

    private void NavigateToLogin()
    {
        ShowUserExistsModal = false;
        Navigation.NavigateTo("/login");
    }

    private void CloseModal() => ShowUserExistsModal = false;

    public class CurrentLocation
    {
        public double Lat { get; set; }
        public double Lng { get; set; }
    }
}


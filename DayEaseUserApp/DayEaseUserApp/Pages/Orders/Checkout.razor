<div class="cart-wrapper">

    <!-- Cart Header -->
    <div class="cart-header">
        <span class="cart-icon">🛍</span>
        Checkout
    </div>

    <!-- Delivery Address -->
    <section class="address-section">
        <h4 class="section-title">
            <i class="fas fa-map-marker-alt"></i> Delivery Address
        </h4>

        <!-- Selected Address -->
        <div class="address-selected" @onclick="() => showAddressDropdown = !showAddressDropdown">
            <div class="address-left">
                <i class="fas fa-home address-icon"></i>
                <div>
                    <div class="address-title">@SelectedAddressTitle</div>
                    <div class="address-text">@SelectedAddressText</div>
                </div>
            </div>

            <i class="fas @(showAddressDropdown ? "fa-chevron-up" : "fa-chevron-down")"></i>
        </div>

        <!-- Dropdown -->
        @if (showAddressDropdown)
        {
            <div class="address-dropdown">

                <div class="address-card"
                     @onclick='() => SelectAddress("Home", "123 Street, City, State - 560001")'>
                    <i class="fas fa-home address-icon"></i>
                    <div>
                        <div class="address-title">Home</div>
                        <div class="address-text">123 Street, City, State - 560001</div>
                    </div>
                </div>

                <div class="address-card"
                     @onclick='() => SelectAddress("Work", "Office Complex, Main Road, City")'>
                    <i class="fas fa-briefcase address-icon"></i>
                    <div>
                        <div class="address-title">Work</div>
                        <div class="address-text">Office Complex, Main Road, City</div>
                    </div>
                </div>

                <div class="address-card add-new">
                    <i class="fas fa-plus-circle"></i>
                    <span>Add New Address</span>
                </div>

            </div>
        }

    </section>

    <!-- Cart Items -->
    <section class="items-section">
        <div class="cart-items-header">
            <div class="left">
                <i class="fas fa-shopping-cart"></i>
                <span class="title">Cart Items</span>
            </div>

            <span class="count">(@cartItems.Count)</span>
        </div>



        @if (cartItems.Any())
        {
            <div class="cart-items-container">

                @foreach (var item in cartItems)
                {
                    <div class="cart-item-row">

                        <img src="@(item.ProductImage ?? "/images/No-images.jpg")"
                             alt="@item.ProductName"
                             class="cart-image" />

                        <div class="item-details">
                            <div class="product-title">@item.ProductName</div>
                            <div class="product-quantity">@item.Quantity pcs</div>
                        </div>

                        <div class="item-price">
                            ₹@(item.Quantity* item.Price)
                        </div>

                    </div>
                }

            </div>
        }
    </section>

    @if (cartItems.Any())
    {
        <!-- Price Summary -->
        <section class="price-summary" style="padding: 0 20px;">

            <!-- TOTAL (always visible) -->
            <div class="price-row total price-toggle"
                 @onclick="() => showPriceDetails = !showPriceDetails">

                <!-- LEFT: Total + dropdown -->
                <div class="total-left">
                    <i class="fas fa-receipt icon"></i>
                    <span class="total-text">Total</span>
                    <i class="fas @(showPriceDetails ? "fa-chevron-up" : "fa-chevron-down") toggle-icon"></i>
                </div>

                <!-- RIGHT: Price -->
                <strong class="total-amount">₹@Total</strong>


            </div>

            <!-- COLLAPSIBLE DETAILS -->
            @if (showPriceDetails)
            {
                <div class="price-details-box">
                    <div class="price-row">
                        <span><i class="fas fa-calculator icon"></i> Subtotal (after discount)</span>
                        <span>₹@Subtotal</span>
                    </div>


                    <div class="price-row">
                        <span><i class="fas fa-motorcycle icon"></i> Delivery Charges</span>
                        <span>₹@DeliveryCharges</span>
                    </div>

                    <div class="price-row">
                        <span>
                            <i class="fas fa-box icon"></i>
                            Handling Charges <small>(incl. 18% GST)</small>
                        </span>
                        <span>₹@HandlingCharges</span>
                    </div>

                    <div class="price-row">
                        <span><i class="fas fa-layer-group icon"></i> Platform Fee</span>
                        <span>₹@PlatformFee</span>
                    </div>

                    @if (SmallCartFee > 0)
                    {
                        <div class="price-row">
                            <span><i class="fas fa-wallet icon"></i> Small Cart Fee</span>
                            <span>₹@SmallCartFee</span>
                        </div>
                    }
                </div>
            }
        </section>

        @if (YouSaved > 0)
        {
            <div class="save-banner">
                🎉 You saved <strong>₹@YouSaved</strong> on this order
            </div>
        }

        <!-- Payment Method -->
        @* <section class="payment-method" style="padding: 20px;">
            <h4>Payment Method</h4>
            <div class="custom-payment-options">
                <div class="payment-option">
                    <input type="radio" id="cod" name="payment" checked />
                    <label for="cod">
                        <img src="images/rupee-note-img.png" class="payment-icon" />
                        Cash on Delivery (COD)
                    </label>
                </div>
                <div class="payment-option">
                    <input type="radio" id="upi" name="payment" />
                    <label for="upi">
                        <img src="images/UPI-img.png" class="payment-icon" />
                        UPI
                    </label>
                </div>
                <div class="payment-option">
                    <input type="radio" id="card" name="payment" />
                    <label for="card">
                        <img src="images/debit-card-img.png" class="payment-icon" />
                        Credit/Debit Card
                    </label>
                </div>
            </div>
        </section> *@

        <button class="place-order-btn"
                @onclick="PlaceOrderAsync"
                disabled="@isSubmitting">
            @(isSubmitting ? "Placing Order..." : "Place Order")
        </button>

        @if (showUpiSuccessDialog)
        {
            <div class="upi-dialog-backdrop">
                <div class="upi-dialog">
                    <h3>Complete UPI Payment</h3>

                    <p>Open your UPI app and complete payment.</p>

                    <button class="success-btn" @onclick="ConfirmUpiPaymentSuccess">
                        I Have Paid Successfully ✔️
                    </button>

                    <button class="cancel-btn" @onclick="(() => showUpiSuccessDialog = false)">
                        Cancel

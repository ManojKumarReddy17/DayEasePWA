@page "/MyOrders"
@using DayEaseServices.Services
@using Domain.DomainModels
@inject IOrderService orderservices
@using DayEaseServices.Services.IServices
@using Domain.RequestModels
@inject NavigationManager Navigation
@* @layout NavMenu *@
@inject UserLocationManager UserLocation


<style>
    body {
        margin: 0;
        padding: 0;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    /* ================= PAGE ================= */

    .page-wrapper {
        background-color: aliceblue;
        min-height: 100vh;
        padding: 2rem 1rem;
        display: flex;
        flex-direction: column;
        align-items: center;
    }

    .order-heading {
        font-size: 1.5rem;
        font-weight: bold;
        margin-bottom: 2rem;
        text-align: center;
        color: #111827;
    }

    /* ================= ORDER CARD ================= */

    .order-card {
        background-color: #ffffff;
        border-radius: 1rem;
        box-shadow: 0 6px 12px rgba(0, 0, 0, 0.08);
        padding: 1rem;
        width: 100%;
        max-width: 700px;
        margin-bottom: 1.5rem;
        transition: transform 0.3s ease;
    }

        .order-card:hover {
            transform: translateY(-4px);
        }

    @@media (min-width: 640px) {
        .order-card

    {
        padding: 1.5rem;
    }

    }

    /* ================= ORDER INFO ================= */

    .order-id {
        font-size: 1.2rem;
        font-weight: bold;
        color: #2563eb;
    }

    .order-date {
        font-size: 0.95rem;
        color: #6b7280;
        font-style: italic;
        margin-bottom: 0.75rem;
    }

    /* ================= PRODUCT GRID ================= */

    .product-grid {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 12px;
        margin-top: 12px;
    }

    @@media (min-width: 640px) {
        .product-grid

    {
        grid-template-columns: repeat(4, 1fr);
    }

    }

    @@media (min-width: 1024px) {
        .product-grid

    {
        grid-template-columns: repeat(5, 1fr);
    }

    }

    .product-card {
        background: #f9fafb;
        border-radius: 14px;
        padding: 10px;
        text-align: center;
        box-shadow: 0 4px 10px rgba(0,0,0,0.05);
    }

    .product-image {
        width: 100%;
        aspect-ratio: 1 / 1;
        object-fit: contain;
        margin-bottom: 8px;
    }

    .product-name {
        font-size: 0.9rem;
        font-weight: 600;
        color: #111827;
    }

    .product-meta {
        font-size: 0.8rem;
        color: #6b7280;
    }

    .more-items {
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: 700;
        font-size: 1rem;
        color: #2563eb;
        background: #eef2ff;
    }

    /* ================= FOOTER ================= */

    .order-footer {
        display: flex;
        flex-direction: column;
        gap: 10px;
        margin-top: 14px;
    }

    @@media (min-width: 640px) {
        .order-footer

    {
        flex-direction: row;
        justify-content: space-between;
        align-items: center;
    }

    }

    .total-amount {
        font-size: 1.1rem;
        font-weight: 700;
        color: #111827;
    }

    /* ================= ACTION BUTTONS ================= */

    .order-actions {
        display: flex;
        gap: 10px;
        width: 100%;
    }

    .order-button {
        flex: 1;
        border: none;
        padding: 0.6rem 0.9rem;
        border-radius: 0.9rem;
        font-weight: 600;
        font-size: 0.75rem;
        cursor: pointer;
        text-decoration: none;
        text-align: center;
    }

    @@media (min-width: 640px) {
        .order-actions

    {
        width: auto;
    }

    .order-button {
        flex: unset;
    }

    }

    .order-button.reorder {
        background-color: #2563eb;
        color: white;
    }

        .order-button.reorder:hover {
            background-color: #1d4ed8;
        }

    .order-button.view {
        background-color: #1f2937;
        color: white;
    }

        .order-button.view:hover {
            background-color: #111827;
        }

    /* ================= STATUS ================= */

    .order-status {
        margin-top: 12px;
        display: flex;
        gap: 6px;
        align-items: center;
        flex-wrap: wrap;
    }

</style>

<div class="page-wrapper">
    @* <h2 class="order-heading"> *@
    @*     <img src="images/Day-Ease-logo-black.png" class="logo" alt="Day Ease Logo" />My Orders *@
    @* </h2> *@
    <h2 class="order-heading flex-heading">
        @* <img src="images/Day-Ease-logo-black.png" class="logo" alt="Day Ease Logo" /> *@
        Your Orders
    </h2>

    @foreach (var order in OrderDetails)
    {
        <div class="order-card">
            <div class="order-id">@order.OrderId</div>
            <div class="order-date">@order.CreatedAt.ToString("dd MMM yyyy, hh:mm tt")</div>

            <p><strong>Store:</strong> @order.StoreName</p>

            @if (order.OrderItems != null && order.OrderItems.Any())
            {
                <div class="product-grid">
                    @foreach (var item in order.OrderItems.Take(3))
                    {
                        <div class="product-card">
                            <img src="@GetProductImage(item.ProductImg)"
                                 class="product-image"
                                 loading="lazy"
                                 decoding="async"
                                 alt="@item.ProductName"
                                 onerror="this.onerror=null;this.src='images/no-image.png';" />

                            <div class="product-name">@item.ProductName</div>
                            <div class="product-meta">
                                Qty: @item.Quantity <br />
                                ₹@item.Price.ToString("N2")
                            </div>
                        </div>
                    }

                    @if (order.OrderItems.Count > 3)
                    {
                        <div class="product-card more-items">
                            +@(order.OrderItems.Count - 3) more
                        </div>
                    }
                </div>
            }
            else
            {
                <p>No items found.</p>
            }

            <div class="order-footer">
                <div class="total-amount">
                    Total: ₹@order.TotalAmount.ToString("N2")
                </div>

                <div class="order-actions">
                    <button class="order-button reorder">Reorder</button>
                    <a href="/order?orderId=@order.OrderId" class="order-button view">
                        View Details
                    </a>
                </div>
            </div>


            <div class="order-status">
                <span>Status:</span>
                <span class="@GetStatusBadgeClass(order.OrderStatus)">
                    @order.OrderStatus
                </span>
            </div>

        </div>

    }
</div>


@code {

    private List<OrderRequestModel> OrderDetails { get; set; } = new();

    private bool isLoading = true;

    protected override async Task OnInitializedAsync()
    {
        try
        {


            var request = new OrderRequestModel { UserId = UserLocation.UserId };

            OrderDetails = await orderservices.OrderDetailsbyUser(request);

        }
        catch
        {
            OrderDetails = null;
        }

        isLoading = false;
    }
    private string GetStatusBadgeClass(string status) => status?.ToLower() switch
    {
        "delivered" => "status delivered",
        "outfordelivery" => "status out-for-delivery",
        "cancelled" => "status cancelled",
        "pending" => "status pending",
        _ => "status"
    };
    private string GetProductImage(string img)
    {
        if (string.IsNullOrWhiteSpace(img))
            return "images/no-image.png"; // fallback

        // If it's an absolute URL, return as-is
        if (img.StartsWith("http://") || img.StartsWith("https://"))
            return img;

        // If it already contains a folder, assume relative to wwwroot
        if (img.Contains("/"))
            return img;

        // If it's just a filename, prepend the correct folder
        return $"Products/{img}";
    }


}